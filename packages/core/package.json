  "dependencies": {
    "zod": "^4.3.5",
    "lz-string": "^1.5.0"
  },
  "devDependencies": {
    "@types/lz-string": "^1.3.34",
    "@types/node": "^24.10.1",
    "tsup": "^8.5.0",
    "typescript": "~5.9.3",
    "vitest": "^4.0.17"
  },
  "keywords": [
    "pricing",
    "saas",
    "cogs",
    "margin",
    "calculator",
    "cost-analysis"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/hazlijohar95/BasedPricer.git",
    "directory": "packages/core"
  }
